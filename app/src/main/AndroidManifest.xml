<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sanwajas.schoolschedule">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Schoolschedule">
        <receiver
            android:name=".UI.TheReceiver"
            android:enabled="true"
            android:exported="true"></receiver>

        <activity
            android:name=".UI.ClassDetailActivity"
            android:exported="false" />
        <activity
            android:name=".UI.AssessmentDetailActivity"
            android:exported="false" />
        <activity
            android:name=".UI.TermsActivity"
            android:exported="false" />
        <activity
            android:name=".UI.ClassActivity"
            android:exported="false" />
        <activity
            android:name=".UI.TermDetailActivity"
            android:exported="false" />
        <activity
            android:name=".UI.AssessmentActivity"
            android:exported="false" />
        <activity
            android:name=".UI.MainActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.OptionsActivity"
            android:exported="true" />
    </application>

</manifest>